<Window x:Class="CourierSystem.Views.CourierPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourierSystem.Views"
        mc:Ignorable="d"
        Title="CourierPanel" Height="450" Width="1260">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox Name="SearchCourierShipment" Grid.Row="0" FontSize="24" TextChanged="SearchBox_TextChanged" ></TextBox>
        <ListView Grid.Row="1" Name="ListViewCourierShipment">
            <ListView.View>
            <GridView>
                <GridViewColumn Header="Numer Przesyłki" DisplayMemberBinding="{Binding ShipmentNumber}" Width="110"/>
                <GridViewColumn Header="Odbiorca" DisplayMemberBinding="{Binding Recipient}" Width="400"/>
                <GridViewColumn Header="Nadawca" DisplayMemberBinding="{Binding Sender}" Width="400"/>
                <GridViewColumn Header="Status" DisplayMemberBinding="{Binding Status}" Width="260"/>
                <GridViewColumn Header="Rozmiar" DisplayMemberBinding="{Binding Size }" Width="50"/>
            </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
