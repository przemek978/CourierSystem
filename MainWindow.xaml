<Window x:Class="CourierSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourierSystem"
        mc:Ignorable="d"
        Title="Main Menu" Height="450" Width="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Grid.Row="0" FontSize="72" Click="Navigate_To_Login" >Logowanie do systemu</Button>
        <Button Grid.Row="1" x:Name="Tracking" FontSize="72" Click="Tracking_Click">Śledzenie przesyłek</Button>
    </Grid>
</Window>
